{
  "name": "hot-module-reloading",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --progress --color --config internal/webpack/webpack.development.config.js",
    "prebuild": "rimraf ./dist/*",
    "build": "webpack --color --config internal/webpack/webpack.production.config.js",
    "test:watch": "jest --watchAll",
    "test": "jest --ci --runInBand"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "setupFiles": [
      "<rootDir>/internal/tests/browserMocks.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internal/tests/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/internal/tests/styleMock.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^21.0.0",
    "@types/node": "^8.0.28",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-router": "^4.0.12",
    "@types/react-router-dom": "^4.0.5",
    "@types/react-test-renderer": "^16.0.0",
    "@types/react-transition-group": "^2.0.2",
    "cache-loader": "^1.0.3",
    "css-loader": "^0.28.7",
    "file-loader": "^0.11.1",
    "fork-ts-checker-notifier-webpack-plugin": "^0.2.0",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^21.1.0",
    "jest-junit": "^3.1.0",
    "node-sass": "^4.5.3",
    "react-addons-shallow-compare": "^15.6.0",
    "react-hot-loader": "next",
    "react-test-renderer": "^16.0.0",
    "resolve-url-loader": "^2.0.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.17.0",
    "svg-url-loader": "^2.2.0",
    "thread-loader": "^1.1.1",
    "ts-jest": "^21.0.1",
    "ts-loader": "^2.3.7",
    "tslib": "^1.7.1",
    "tslint": "^5.5.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.2",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.2"
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "semantic-ui-css": "^2.2.12",
    "whatwg-fetch": "^2.0.3"
  }
}
