{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "../dist",
    "declarationDir": "../dist",
    "declarationMap": true,
    "sourceMap": true
  }
}
